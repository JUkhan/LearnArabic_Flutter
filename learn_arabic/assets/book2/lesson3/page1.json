        { "w": "muslim-uuna" },
        { "w": "مُدَرِّسٌ" },
        { "w": "مُدَرِّسُونَ" },
        { "w": "mudarris-u-n" },
        { "w": "mudarris-uuna" }
      ]
    },
    {
      "d": "ltr",
